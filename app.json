{
  "expo": {
    "name": "Trevi",
    "slug": "trevi",
    "version": "1.0.4",
    "scheme": "trevi",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "icon": "./src/Assets/Images/icon.png",
    "splash": {
      "image": "./src/Assets/Images/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#E6DAF5"
    },
    "updates": {
      "enabled": false,
      "checkAutomatically": "ON_ERROR_RECOVERY"
    },
    "assetBundlePatterns": ["**/*"],
    "jsEngine": "hermes",
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.amandatreviapp.trevi",
      "buildNumber": "1.0.4",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "Trevi needs camera access so donors can attach a photo with their gift.",
        "NSPhotoLibraryUsageDescription": "Trevi needs photo library access so donors can choose a photo to include with their gift.",
        "NSPhotoLibraryAddUsageDescription": "Trevi may save the photo you choose to include with their gift.",
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        },
        "NSLocalNetworkUsageDescription": "Trevi needs access to your local network to connect to your test backend."
      },
      "splash": {
        "image": "./src/Assets/Images/splash.png",
        "resizeMode": "cover",
        "backgroundColor": "#E6DAF5"
      }
    },
    "plugins": [
      "expo-font",
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "17.0",
            "useFrameworks": "static"
          },
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35
          }
        }
      ],
      [
        "@stripe/stripe-react-native",
        {
          "merchantIdentifier": "merchant.com.trevi",
          "enableGooglePay": true
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "589e2861-59b7-4fa3-bf31-93de216d73b0"
      },
      "expo-updates": {
        "enabled": false,
        "checkAutomatically": "ON_ERROR_RECOVERY"
      }
    },
    "android": {
      "package": "com.amandatreviapp.trevi",
      "versionCode": 3,
      "splash": {
        "image": "./src/Assets/Images/splash.png",
        "resizeMode": "cover",
        "backgroundColor": "#E6DAF5"
      },
      "adaptiveIcon": {
        "backgroundColor": "#E6DAF5"
      },
      "intentFilters": [
        {
          "action": "VIEW",
          "category": ["BROWSABLE", "DEFAULT"],
          "data": [
            {
              "scheme": "trevi"
            }
          ]
        }
      ]
    }
  }
}

